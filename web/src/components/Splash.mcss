.container {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(255, 255, 255, 0.7);
  align-items: center;
  justify-content: center;

  &.hidden {
    display: none;
  }
}

.message {
  margin: 10px 0;
  font-size: 1.3em;
}
