.heading {
  width: 100%;
  margin: 50px 0 10px 0;
  font-size: 1.1em;

  &:first-child {
    margin-top: 0;
  }

  &:last-child {
    margin-bottom: 0;
  }
}

.select {
  width: 100%;
}

.schema-form {
  & :global fieldset {
    margin: 10px 0;
    padding: 0;
    font-weight: bold;
    border: none;
  }

  & :global .control-label {
    display: block;
    margin: 10px 0;
    font-weight: normal;
  }
}
